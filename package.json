{
  "name": "lumyn",
  "version": "1.0.12",
  "description": "Where connections come alive",
  "main": "electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "electron"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server && npm install --workspace=electron",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:electron\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:electron": "wait-on http://localhost:5173 && npm run dev --workspace=electron",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:electron": "npm run build --workspace=electron",
    "build:desktop": "npm run build:client && npm run build:electron && electron-builder",
    "build:web": "npm run build:client",
    "build:win": "npm run build:desktop -- --win",
    "build:mac": "npm run build:desktop -- --mac",
    "build:linux": "npm run build:desktop -- --linux",
    "test": "npm run test --workspaces",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint --workspace=client",
    "lint:server": "npm run lint --workspace=server"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.lumyn.app",
    "productName": "LUMYN",
    "publish": [
      {
        "provider": "github",
        "owner": "user4032",
        "repo": "LUMYN"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "client/dist/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json",
      "!server/disgram.auth.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!disgram.auth.json"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LUMYN",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Network"
    }
  }
}
