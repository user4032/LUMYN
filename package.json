{
  "name": "lumyn",
  "version": "1.0.12",
  "description": "Where connections come alive",
  "main": "src/main/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:server": "node server/index.js",
    "start": "node server/index.js",
    "build": "tsc && vite build",
    "build:desktop": "tsc && vite build && electron-builder",
    "build:web": "tsc && vite build",
    "build:win": "npm run build:desktop -- --win",
    "build:mac": "npm run build:desktop -- --mac",
    "build:linux": "npm run build:desktop -- --linux",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@reduxjs/toolkit": "^2.2.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.3.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.0",
    "emoji-picker-react": "^4.8.0",
    "express": "^4.18.3",
    "mongoose": "^9.2.1",
    "nodemailer": "^6.9.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lumyn.app",
    "productName": "LUMYN",
    "publish": [
      {
        "provider": "github",
        "owner": "user4032",
        "repo": "LUMYN"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "server/**/*",
      "package.json",
      "!server/disgram.auth.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!disgram.auth.json"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LUMYN",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Network"
    }
  }
}
